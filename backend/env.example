# Database
MONGODB_URI=mongodb://localhost:27017/greenworld

# JWT
JWT_SECRET=your_jwt_secret_key_here

# PayPal Configuration (Sandbox)
PAYPAL_CLIENT_ID=your_paypal_sandbox_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_sandbox_client_secret_here
PAYPAL_MODE=sandbox

# PayPal Live Configuration (for production)
# PAYPAL_CLIENT_ID=your_paypal_live_client_id_here
# PAYPAL_CLIENT_SECRET=your_paypal_live_client_secret_here
# PAYPAL_MODE=live

# Stripe Configuration (removed - using PayPal only)
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Frontend URL
FRONTEND_URL=http://localhost:3000
FRONTEND_ORIGIN=http://localhost:3000

# Server Configuration
PORT=5000
NODE_ENV=development

# OAuth (if using Google OAuth)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# SSL (optional)
USE_HTTPS=false
SSL_KEY_PATH=path/to/private.key
SSL_CERT_PATH=path/to/certificate.crt
